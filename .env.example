# zkDPoP Demo Configuration
# Copy this file to .env and modify as needed

# Server port (default: 8081)
PORT=8081

# Elliptic curve for ZK proofs
# Options: secp256k1, ristretto255
CURVE=secp256k1

# Rate limit (requests per minute per client)
RATE_LIMIT=120

# JWT token lifetime in minutes (default: 15)
TOKEN_TTL_MINUTES=15

# ZK session lifetime in minutes (default: 2)
SESSION_TTL_MINUTES=2

# Log level (debug, info, warn, error)
LOG_LEVEL=info
